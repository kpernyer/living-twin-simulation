# Living Twin Simulation - Environment Configuration
# Copy this file to .env and update with your settings

# =============================================================================
# MCP (Model Context Protocol) Configuration
# =============================================================================

# MCP Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=3000
MCP_SERVER_PROTOCOL=http

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=mistral:7b-instruct
# Alternative models you can use:
# OLLAMA_MODEL=llama2:7b-chat
# OLLAMA_MODEL=codellama:7b-instruct
# OLLAMA_MODEL=openhermes:7b-mistral
# OLLAMA_MODEL=neural-chat:7b

# LLM Configuration
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=500
LLM_TOP_P=0.9
LLM_FREQUENCY_PENALTY=0.0
LLM_PRESENCE_PENALTY=0.0

# =============================================================================
# Simulation Configuration
# =============================================================================

# Default simulation settings
DEFAULT_TIME_ACCELERATION=144
DEFAULT_SIMULATION_DURATION_DAYS=30
DEFAULT_ORGANIZATION_ID=acme_corp

# Agent behavior settings
DEFAULT_ESCALATION_THRESHOLD=5
DEFAULT_RESPONSE_DELAY_MINUTES=30
DEFAULT_CONSULTATION_DELAY_MINUTES=60

# =============================================================================
# Logging Configuration
# =============================================================================

LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=simulation.log

# =============================================================================
# Voice Services Configuration
# =============================================================================

# ElevenLabs API Key for professional voice generation (for scripts/generate_voices*.js)
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# =============================================================================
# Development Configuration
# =============================================================================

# Development mode settings
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_AI_PROCESSING=false  # Set to true to use MCP Agent Engine

# Test configuration
TEST_MODE=false
TEST_EMPLOYEE_COUNT=10
