{
  "hosting": {
    "public": "web/out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "destination": "https://dev.aprio.one/api"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/api/**",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "https://dev.aprio.one"
          },
          {
            "key": "Access-Control-Allow-Methods", 
            "value": "GET, POST, PUT, DELETE, OPTIONS"
          },
          {
            "key": "Access-Control-Allow-Headers",
            "value": "Content-Type, Authorization, X-Requested-With"
          }
        ]
      }
    ]
  },
  "emulators": {
    "hosting": {
      "host": "localhost",
      "port": 5000
    },
    "ui": {
      "enabled": true,
      "host": "localhost", 
      "port": 4000
    }
  },
  "functions": {
    "runtime": "nodejs18"
  }
}